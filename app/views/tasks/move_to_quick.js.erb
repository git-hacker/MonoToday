$(function() {
  var isSuccess = <%= @result %>;
  if (isSuccess) {
    var taskId = '#task-id-<%= @task.id %>';
    $(taskId).slideUp({ complete: function() {
      $(taskId).remove();
    }});
  } else {
    messageTip('快捷清单已满');
  }

  $('.current-task').text('#<%= @current_task && @current_task.title %>#');
});
